@model MarieCurie.Models.HelperService

<!-- With class  .panel-default if the Helper Service is closed -->
<!-- With class .panel-warning if the Helper Service is open -->
<div class="col-md-4">
<div class="panel panel-default @(Model.IsOpen? "panel-warning" : "panel-default")">

    <div class="panel-heading">
        <h3 class="panel-title">@Model.Title</h3>
    </div>

    <div class="panel-body">
        @Model.Description

        <p class="gamma margin-base"><a href="tel:@Model.TelephoneNumber">@Model.TelephoneNumber</a></p>
    </div>

    <div class="panel-footer">
        <p>@Model.OpenMessage</p>
    </div>

</div>
</div>